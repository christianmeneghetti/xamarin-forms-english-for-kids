<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InglesForKids.MainPage"
             Title="Inglês para crianças">

    <StackLayout>
        <Image Source="logo2" 
               Margin="0,60,0,0"/>
        <Label Text="Que tal aprender inglês?" 
               HorizontalOptions="Center"
               FontSize="Large"
               TextColor="Black"/>
        <Button Text="Cores" 
                Margin="30,120,30,0"
                BackgroundColor="#E98989"
                Clicked="btCores_Clicked"
                x:Name="btCores"/>
        <Button Text="Família" 
                Margin="30,0,30,0"
                BackgroundColor="#4FE6A5"
                Clicked="btFamilia_Clicked"
                x:Name="btFamilia"/>
        <Button Text="Números" 
                Margin="30,0,30,0"
                BackgroundColor="#5E7B80"
                Clicked="btNumeros_Clicked"
                x:Name="btNumeros"/>
    </StackLayout>
</ContentPage>
